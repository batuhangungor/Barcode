@model Product
@{
    ViewData["Title"] = "Ürün Ekelem/Güncelleme";
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Ürün ekleme/güncelleme ekranı : @Model.Name
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <form method="post">
                            @if (ViewBag.successMessage != null)
                            {
                                <span class="alert alert-success">@ViewBag.successMessage</span>
                            }
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label>Ürün Adı</label>
                                <input class="form-control" asp-for="Name">
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>

                            <div class="form-group">
                                <label>Barkodu</label>
                                <input class="form-control" asp-for="Barcode">
                                <span class="text-danger" asp-validation-for="Barcode"></span>
                            </div>

                            <div class="form-group">
                                <label>Markası</label>
                                <select class="form-control" asp-for="BrandId" asp-items="ViewBag.brands"></select>
                                <span class="text-danger" asp-validation-for="BrandId"></span>
                            </div>

                            <div class="form-group">
                                <label>Kategorisi</label>
                                <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.categories"></select>
                                <span class="text-danger" asp-validation-for="CategoryId"></span>
                            </div>

                            <div class="form-group">
                                <label>Birim satış fiyatı</label>
                                <input class="form-control" asp-for="Price">
                                <span class="text-danger" asp-validation-for="Price"></span>
                            </div>

                            <div class="form-group">
                                <label>Stok Adedi</label>
                                <input class="form-control" asp-for="Storage.Count">
                                <span class="text-danger" asp-validation-for="Storage.Count"></span>
                            </div>
                            <button type="submit" class="btn btn-default">Kaydet</button>
                        </form>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>